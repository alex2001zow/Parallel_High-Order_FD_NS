{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MPI Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/mpirun",
            "args": [
                "-np",
                "4",
                "${workspaceFolder}/exec/parallel_solver_mpi.out",
                "8",
                "8",
                "2",
                "2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build parallel_solver_mpi.out"
        }
    ]
}