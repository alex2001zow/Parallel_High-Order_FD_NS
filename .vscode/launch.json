{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to MPI Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/exec/parallel_solver_mpi.out",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}